{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "DiskOfflaner",
    "version": "2.0.0",
    "identifier": "com.diskofflaner.app",
    "build": {
        "beforeDevCommand": "bun run dev",
        "beforeBuildCommand": "bun run build",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "DiskOfflaner",
                "width": 1200,
                "height": 800,
                "minWidth": 880,
                "resizable": true,
                "fullscreen": false,
                "visible": true,
                "transparent": false,
                "decorations": true,
                "theme": "Dark",
                "backgroundColor": "#0f0f14"
            }
        ],
        "security": {
            "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost data:"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}